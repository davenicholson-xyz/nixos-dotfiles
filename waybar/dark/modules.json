{
    "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{windows}",
        "format-icons": {
            "urgent": "",
            "active": "",
            "default": "",
            "empty": ""
        },
        "window-rewrite-seperator" : "\n",
        "window-rewrite-default" : "󱄅",
        "window-rewrite": {
            "class<foot>" : "",
            "title<nvim>" : "",
            "class<google-chrome>" : "",
            "class<nemo>" : "󰉋",
            "class<yazi>" : "󰉋"
        },
        "persistent-workspaces": {
            "*": 2
        }
    },

    "tray" : {
        "icon-size" : 18,
        "spacing" : 10
    },

    "network": {
        "interface" : "ens18",
        "format" : "{ifname}",
        "format-ethernet" : "󰈀",
        "tooltip-format-ethernet" : "<b>{ipaddr}/{cidr}</b>"  
    },

    "clock": {
        "interval": 60,
        "format": "{:%H:%M}",
        "tooltip" : true,
        "tooltip-format" : "{:L%A, %B %d, %Y}"
    }
}

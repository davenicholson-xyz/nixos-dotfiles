#!/usr/bin/env bash

if [ -n "$1" ]; then
  IMG=$1
else
  read IMG
  echo $IMG
fi

# swww img --transition-step=1 --transition-fps=120 $1
swww img --transition-step=255 --transition-fps=255 $IMG
# swww img --transition-type=random $1
wal -i $IMG

nohup hyprctrl reload >/dev/null 2>&1 &
nohup /home/dave/.dotfiles/waybar/launch.sh >/dev/null 2>&1 &
# nohup /home/dave/.dotfiles/scripts/dunstlauncher >/dev/null 2>&1 &
nohup swaync-client -rs >/dev/null 2>&1 &
